                    <p>
                      <a href="{{ block.url }}">
                        {{ labels.labelMoreInfo }}
                      </a>
                    </p>
                  {% endswitch %}
                  {% endfor %}
                  {% endif %}
                </div>
              </article>
            </li>
          {% endif %}
        {% endfor %}
      {% endif %}

      {% if prevEntry %}
