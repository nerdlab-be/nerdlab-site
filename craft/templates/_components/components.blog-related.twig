                    {% endif %}
                    {% endfor %}
                  {% endswitch %}
                  {% endfor %}
                  {% endif %}
                </div>
                {% endif %}
                <div class="s-editor s-editor--small">
                  <h2 class="u-margin-bottom-small">
                    <a href="{{ block.url }}" class="c-card-link__link">
                      {{ block.title }}
                    </a>
                  </h2>
                  {# Details #}
