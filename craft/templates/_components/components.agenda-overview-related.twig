{# -- Module -- #}
{% set pageEntries = craft.entries
  .section('events')
  .all()
  | supersort('sortAs', '{eventDetails.dateStart.date}')
%}

{% set related = "false" %}
{% for event in pageEntries if event.eventDetails.dateStart|date('Ymd') >= now|date('Ymd') or event.eventDetails.dateEnd|length and event.eventDetails.dateEnd|date('Ymd') >= now|date('Ymd') %}
{% if entry.title != event.title %}
{% set related = "true" %}
{% endif %}
{% endfor %}
{% if related == "true" %}
<div class="o-row-large u-divider">
  <div class="o-wrapper o-wrapper--huge">
    <div class="s-editor">
      <h2 class="c-title-graphic">{{ labels.labelOtherEvents }}</h2>
    </div>
    <ul class="o-layout c-card-group">
    {% for event in pageEntries if event.eventDetails.dateStart|date('Ymd') >= now|date('Ymd') or event.eventDetails.dateEnd|length and event.eventDetails.dateEnd|date('Ymd') >= now|date('Ymd') %}
      {% if entry.title != event.title %}
      <li class="o-layout__item u-1/2@small u-1/3@medium">
        <article class="o-box o-box--flush">
          {% if event.pageIntro | length() %}
          <div class="o-crop o-crop--3:1 u-margin-bottom c-media-border">
            {% if event.pageIntro.visual | length() %}
            {% set visual = event.pageIntro.visual.all() %}
            {% for block in visual %}
            {% switch block.type %}
            {% case "image" %}
              {% for image in block.image.all() %}
              <a href="{{ event.url }}" alt="{{ event.title }}">
                {% if image.getMimeType() == 'image/gif' %}
                <img
                  src="{{ image.url() }}"
                  alt="{{ image.altText }}"
                  class="o-crop__content o-crop__content--center c-media lazyload fade-in">
                {% else %}
                <img
                  data-sizes="auto"
                  data-srcset="
                    {{ image.url(small) }} 350w,
                    {{ image.url(medium) }} 600w,
                    {{ image.url(large) }} 900w,
                    {{ image.url(xlarge) }} 1280w,
                    {{ image.url(huge) }} 1400w"
                  src="{{ image.url(thumb) }}"
                  alt="{{ image.altText }}"
                  class="o-crop__content o-crop__content--center c-media lazyload fade-in">
                </a>
                {% endif %}
              {% endfor %}
            {% endswitch %}
            {% endfor %}
            {% endif %}
          </div>
          {% endif %}
          <div class="s-editor s-editor--small">
            <h2 class="u-margin-bottom-small">
              <a href="{{ event.url }}">
                {{ event.title }}
              </a>
            </h2>
            {# Details #}
            <ul class="o-list-bare c-list c-list--agenda c-faded">
              {% if event.eventDetails.dateStart | length() %}
              <li class="o-list-bare__item c-list__item">
                {% if event.eventDetails.dateEnd | length %}
                ğŸ—“ï¸ &nbsp;{{ event.eventDetails.dateStart | date('d F Y') | capitalize }}
                {% if event.eventDetails.dateEnd  | date('d F Y') == event.eventDetails.dateStart  | date('d F Y') %}
                {% else %}
                tot
                {{ event.eventDetails.dateEnd | date('d F Y') | capitalize }}
                {% endif %}
                {% else %}
                ğŸ—“ï¸ &nbsp;{{ event.eventDetails.dateStart | date('d F Y') | capitalize }}
                {% endif %}
              </li>
              {% endif %}
              {% if event.eventDetails.location | length() %}
              <li class="o-list-bare__item c-list__item">
                ğŸ“ &nbsp;{{ event.eventDetails.location }}
              </li>
              {% endif %}
              {% if event.eventDetails.state | length() %}
              <li class="o-list-bare__item c-list__item">
                ğŸ·ï¸ &nbsp;{{ event.eventDetails.state | capitalize }}
              </li>
              {% endif %}
            </ul>
          </div>
        </article>
      </li>
      {% endif %}
    {% endfor %}
    </ul>
  </div>
</div>
{% endif %}
