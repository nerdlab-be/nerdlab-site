{# {% include '_components/components.content-image' %} #}

<div class="o-row-large u-divider">
  <div class="o-wrapper o-wrapper--huge">
    {% if block.singleImage | length() %}
    {% for image in block.singleImage.all() %}
    {% if image.getMimeType() == 'image/gif' %}
    <img
      src="{{ image.url() }}"
      alt="{{ image.altText }}"
      class="c-media c-media--shadow lazyload fade-in">
    {% else %}
    <img
      data-sizes="auto"
      data-srcset="
        {{ image.url(small) }} 350w,
        {{ image.url(medium) }} 600w,
        {{ image.url(large) }} 900w,
        {{ image.url(xlarge) }} 1280w,
        {{ image.url(huge) }} 1400w"
      src="{{ image.url(thumb) }}"
      alt="{{ image.altText }}"
      class="c-media c-media--shadow lazyload fade-in">
    {% endif %}
    {% if image.credits | length() %}
    <p>{{ image.credits }}</p>
    {% endif %}
    {% endfor %}
    {% endif %}
  </div>
</div>
