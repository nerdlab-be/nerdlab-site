{# {% include '_components/components.content-paragraph-image' %} #}

<div class="o-row-large u-divider">
  <div class="o-wrapper o-wrapper--huge">
    <div class="o-layout {% if block.position == 'left' %}o-layout--reverse{% endif %}">
      <div class="o-layout__item {% if block.position != 'center' %}u-2/3@small u-1/2@medium{% endif %}">
        <div class="s-editor s-editor--title">
          {{ block.paragraph }}
        </div>
      </div>
      <div class="o-layout__item {% if block.position != 'center' %}u-1/3@small u-1/2@medium{% endif %}">
        {% if block.paragraphImage | length() %}
        {% for image in block.paragraphImage.all() %}
        {% if image.getMimeType() == 'image/gif' %}
        <img
          src="{{ image.url() }}"
          alt="{{ image.altText }}"
          class="c-media c-media--shadow lazyload fade-in">
        {% else %}
        <img
          data-sizes="auto"
          data-srcset="
            {{ image.url(small) }} 350w,
            {{ image.url(medium) }} 600w,
            {{ image.url(large) }} 900w,
            {{ image.url(xlarge) }} 1280w,
            {{ image.url(huge) }} 1400w"
          src="{{ image.url(thumb) }}"
          alt="{{ image.altText }}"
          class="c-media c-media--shadow lazyload fade-in">
        {% endif %}
        {% if image.credits | length() %}
        <p class="c-faded u-margin-top-small">{{ image.credits }}</p>
        {% endif %}
        {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</div>
