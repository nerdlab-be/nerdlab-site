{% extends "_layouts/mutation" %}

{% block main %}
<div class="o-row-large c-theme-secondary-negative c-illustration">
  <span class="c-illustration__center-top" role="presentation" aria-hidden="true">
    <img src="/assets/images/svg/illustrationO3.svg" alt="">
  </span>
  <div class="o-wrapper o-wrapper--huge">
    <div class="o-layout">
      <div class="o-layout__item u-1/3@medium">
        <h1 class="c-section-title">
          {{ entry.title }}
        </h1>
      </div>
      <div class="o-layout__item u-2/3@medium">
        {% set credits = entry.siteCredits.all() %}
        <ul class="o-list-bare c-list c-list--credits">
        {% for item in credits %}
          <li class="c-list__item">
            <a href="{{ item.href }}" class="c-link c-link--bare" target="_blank">{{ item.target }} {% include '_tools/tools.icon.twig' with { options: { icon: 'forward' }} %}</a>
            <span class="c-tag">{{ item.subject }}</span>
          </li>
        {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>





{% endblock %}
